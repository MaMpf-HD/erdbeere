<% provide(:title, 'Logic error') %>
<div class="tile is-ancestor">
    <div class="tile is-parent">
        <article class="tile is-child notification is-success">
            <div class="content">
                <h3 class="title">You were looking for an object with the following truths:</h3>
                <ul>
                    <% @satisfies.each do |atom| %>
                        <%= render 'atoms/show', :atom => atom, :modifier => 'is' %>
                    <% end %>
                </ul>
            </div>
        </article>
        <article class="tile is-child notification is-success">
            <div class="content">
                <h3 class="title">The following additional truths were derived:</h3>
                <ul>
                    <% (@all_that_is_satisfied - @satisfies).each do |atom| %>
                        <%= render 'atoms/show', :atom => atom, :modifier => 'is' %>
                    <% end %>
                </ul>
            </div>
        </article>
        <article class="tile is-child notification is-warning">
            <div class="content">
                <h3 class="title">You were looking for an object with the following falsehoods:</h3>
                <ul>
                    <% @violates.each do |atom| %>
                        <%= render 'atoms/show', :atom => atom, :modifier => 'is not' %>
                    <% end %>
                </ul>
            </div>
        </article>
        <article class="tile is-child notification is-danger">
            <div class="content">
                <h3 class="title">I found the following contradiction:</h3>
                <ul>
                    <% (@all_that_is_satisfied & @violates).each do |atom| %>
                            <%= render 'atoms/show', :atom => atom, :modifier => 'is and is not' %>
                    <% end %>
                </ul>
            </div>
        </article>
    </div>
</div>
