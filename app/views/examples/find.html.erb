<% provide(:title, I18n.t('examples.find.title')) %>
<% if @hits.present? %>
  <h2>
    <%= I18n.t("examples.find.direct_hits",
               default: "Direct hits") %>
  </h2>
  <div class="row">
    <div class="col-12">
      <ul>
        <% @hits.each do |hit| %>
          <li>
            <%= link_to hit.description,
                        example_path(hit) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<% if (@almost_hits - @hits.to_a).any? %>
  <h2>
    <%= I18n.t("examples.find.still_consistent",
               default: "Still consistent") %>
  </h2>
  <div class="row">
    <% (@almost_hits - @hits.to_a).each_slice(3).each do |slice| %>
      <div class="col-4">
        <%= render partial: 'row_of_search_results',
                   locals: { slice: slice } %>
      </div>
    <% end %>
  </div>
<% end %>
<% if @almost_hits.empty? %>
  <div class="row p-2">
    <div class="col-12">
      <div class="alert alert-warning my-2 p-2">
        <%= I18n.t('examples.find.nothing_found') %>
      </div>
    </div>
  </div>
<% end %>