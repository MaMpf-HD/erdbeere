<div class="row p-2">
  <div class="col-12">
    <h3>
      <%= I18n.t('structure.index.title') %>
    </h3>
  </div>
</div>
<% Structure.all.each_slice(3) do |slice| %>
  <div class="row mb-2 p-2">
    <% slice.each do |s| %>
      <div class="col-4">
        <div class="card">
          <div class="card-header">
            <h4 class="title">
              <%= link_to s.name,
                          structure_path(s) %>
            </h4>
          </div>
          <div class="card-body">
            <ul>
              <% s.original_properties.each do |p| %>
                <li>
                  <%= link_to p.name,
                  						property_path(p) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
