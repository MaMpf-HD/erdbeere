<div class="row p-2">
  <div class="col-12">
    <h3>
      <%= I18n.t('structure.index.title') %>
      <%= link_to '',
                  new_structure_path,
                  class: 'fas fa-plus-circle fa-sm text-secondary',
                  data: { 'bs-toggle': 'tooltip',
                          'bs-placement': 'bottom' },
                  title: t('buttons.create'),
                  style: 'text-decoration: none;',
                  remote: true %>
    </h3>
  </div>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% Structure.all.each do |s| %>
    <div class="col">
    <div class="card h-100">
      <div class="card-header">
        <h4 class="title">
          <%= link_to s.name,
                      structure_path(s) %>
          <%= link_to '',
                      edit_structure_path(s),
                      class: 'far fa-edit fa text-secondary',
                      data: { 'bs-toggle': 'tooltip',
                              'bs-placement': 'bottom' },
                      title: t('buttons.edit'),
                      style: 'text-decoration: none;' %>
        </h4>
      </div>
      <div class="card-body">
        <ul>
          <% s.original_properties.includes(:translations).each do |p| %>
            <li>
              <%= link_to p.name,
               						property_path(p) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    </div>
  <% end %>
</div>
<%= render partial: 'shared/generic_modal',
           locals: { sort: 'structure',
                     title: t('structure.create.title') } %>