<%= form_with model: building_block do |f| %>
	<div class="form-group">
		<%= f.label :name,
								t('building_block.edit.name') %>
   	<%= f.text_field :name,
  									 class: 'form-control' %>
  </div>
  <div class="form-group">
		<%= f.label :definition,
								t('building_block.edit.definition') %>
		<%= f.text_field :definition,
										 class: 'form-control' %>
	</div>
 	<div class="form-group">
		<%= f.label :definition,
								t('building_block.edit.structure') %>
		<%= f.select :structure_id,
								 options_for_select(Structure.all.map { |s| [s.name, s.id] }, building_block.structure_id),
								  {},
	    						{ class: 'form-control' } %>
	</div>
	<%= f.hidden_field :explained_structure_id,
										 value: building_block.explained_structure_id %>
  <div class="row">
    <div class="col-12 text-center">
      <%= f.submit t('buttons.save'),
                   class: "btn btn-primary" %>
      <button type="button"
              class="btn btn-secondary"
              data-dismiss="modal">
        <%= t('buttons.cancel') %>
 	   </button>
    </div>
  </div>
<% end %>