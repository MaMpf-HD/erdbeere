<% delim_close ||= nil %>
<% modifier ||= t('logic.is') %>
<% delim_open ||= '' %>
<% fullstop = '.' if delim_close.nil? %>
<% delim_close = '' if delim_close.nil? %>
<% example ||= nil %>
<% edit ||= false %>
<%= delim_open %>
	<%= atom.deep_stuff_w_props_name %>
	<% if example %>
		<%= example.realization(atom).description %>
	<% end %>
	<i>
		<%= modifier %>
	</i>
	<%= link_to atom.property.name,
							edit ? edit_property_path(atom.property) : property_path(atom.property),
							class: 'text-dark' %>
	<%= fullstop %>
<%= delim_close %>
