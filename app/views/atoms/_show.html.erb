<% modifier ||= t('logic.is') %>
<% success ||= 'truth' %>
<% implication ||= nil %>
<% unless atom.property.nil? %>
  <% if implication.nil? %>
    <li>
      <%= render partial: "atoms/inline_atom",
                 locals: { atom: atom, 
                           modifier: modifier } %>
    </li>
  <% else %>
    <p>
      <a class="button bg-<%= success %> toggle-derivation"
         id="implication-<%= implication.id %>">
        <span class="icon is-small">
          <i class="fa fa-plus-square">
          </i>
        </span>
        <span>
          <%= render partial: "atoms/inline_atom",
                     locals: { atom: atom,
                               modifier: modifier } %>
        </span>
      </a>
      <%= render partial: "implications/inline_message",
                 locals: { implication: implication,
                           success: success } %>
    </p>
  <% end %>
<% end %>
