<% last_atom = implication.atoms.last %>
<% (implication.atoms - [last_atom]).each do |a| %>
  <%= render partial: "atoms/inline_atom",
             locals: { atom: a,
                       delim_open: '(',
                       delim_close: ')',
                       fullstop: '' } %>
  <%= content_tag(:i, t('implications.and')) %>
<% end %>
