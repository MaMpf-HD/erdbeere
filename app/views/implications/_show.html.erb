<% last_premise = implication.premises.last %>
<% (implication.premises - [last_premise]).each do |p| %>
  <%= render partial: "atoms/inline_atom",
             locals: { atom: p.atom,
                       delim_open: '(',
                       delim_close: ')',
                       fullstop: '',
                       modifier: p.value ? t('logic.is') : t('logic.is_not'),
                        } %>
  <%= content_tag(:i, t('implications.and')) %>
<% end %>
<%= render partial: "atoms/inline_atom",
           locals: { atom: last_premise.atom,
                     delim_open: '(',
                     delim_close: ')',
                     fullstop: '',
                     modifier:  last_premise.value ? t('logic.is') : t('logic.is_not') } %>
$\Rightarrow$
<%= render partial: "atoms/inline_atom",
           locals: { atom: implication.implies,
                     modifier: implication.implies_value ? t('logic.is') : t('logic.is_not') } %>
