<!DOCTYPE html>
<html>
  <head>
    <title>ErDBeere</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.13.9/dist/katex.min.css"
      integrity="sha384-r/BYDnh2ViiCwqZt5VJVWuADDic3NnnTIEOv4hOh05nSfB6tjWpKmn1kUHOVkMXc"
      crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script defer
        src="https://cdn.jsdelivr.net/npm/katex@0.13.9/dist/katex.min.js"
        integrity="sha384-zDIgORxjImEWftZXZpWLs2l57fMX9B3yWFPN5Ecabe211Hm5ZG/OIz2b07DYPUcH"
        crossorigin="anonymous">
    </script>
    <script defer
        src="https://cdn.jsdelivr.net/npm/katex@0.13.9/dist/contrib/auto-render.min.js"
        integrity="sha384-vZTG03m+2yp6N6BNi5iM4rW4oIwk5DfcNdFfxkk9ZWpDriOkXX8voJBFrAO7MpVl"
        crossorigin="anonymous"></script>
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.12.0/css/all.min.css"
      integrity="sha256-ybRkN9dBjhcS2qrW1z+hfCxq+1aBdwyQM5wlQoQVt/0="
      crossorigin="anonymous">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag '/favicon.ico' %>
  </head>
  <body>
    <div>
      <main>
        <% if user_signed_in? %>
        <div class="alert alert-danger" id="js-messages" role="alert"
             style="display: none;">
        </div>
        <% if alert.present? %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>
        <% if notice.present? %>
          <div class="alert alert-secondary" role="alert">
            <%= notice %>
          </div>
        <% end %>
        <div class="row p-2">
          <div class="col-6">
            <% unless controller_name == 'structures' && action_name == 'index' %>
              <%= link_to t('layouts.application.back_to_structures'),
                          structures_path,
                          class: 'btn btn-lg btn-outline-secondary' %>
            <% end %>
          </div>
          <div class="col-6 text-right">
            <a href="<%= main_search_path %>"
               class="btn btn-lg btn-outline-secondary">
              <span>
                <i class="fa fa-search">
                </i>
              </span>
              <span>
                <%= t('layouts.application.search') %>
              </span>
            </a>
          </div>
        </div>
        <%= yield %>
        <% else %>
          <div class="row p-3">
            <div class="col-12">
              <%= yield %>
            </div>
          </div>
        <% end %>
      </main>
    </div>
  </body>
</html>
