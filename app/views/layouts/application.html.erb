<!DOCTYPE html>
<html>
  <head>
    <title>ErDBeere</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.10.2/dist/katex.min.css" integrity="sha384-yFRtMMDnQtDRO8rLpMIKrtPCD5jdktao2TV19YiZYWMDkUR5GQZR/NOVTdquEx1j" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.10.2/dist/katex.min.js" integrity="sha384-9Nhn55MVVN0/4OFx7EE5kpFBPsEMZxKTCnA+4fqDmg12eCTqGi6+BB2LjY8brQxJ" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.10.2/dist/contrib/auto-render.min.js" integrity="sha384-kWPLUVMOks5AQFrykwIup5lo0m3iMkkHrD0uJ4H5cjeGihAutqP0yW0J6dpFiVkI" crossorigin="anonymous"></script>
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.12.0/css/all.min.css"
      integrity="sha256-ybRkN9dBjhcS2qrW1z+hfCxq+1aBdwyQM5wlQoQVt/0="
      crossorigin="anonymous">
    <%= favicon_link_tag '/favicon.ico' %>
  </head>
  <body>
    <div>
      <main>
        <div class="alert alert-danger" id="js-messages" role="alert"
             style="display: none;">
        </div>
        <% if alert.present? %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>
        <% if notice.present? %>
          <div class="alert alert-secondary" role="alert">
            <%= notice %>
          </div>
        <% end %>
        <div class="row p-2">
          <div class="col-6">
            <% unless controller_name == 'structures' && action_name == 'index' %>
              <%= link_to t('layouts.application.back_to_structures'),
                          structures_path,
                          class: 'btn btn-lg btn-outline-secondary' %>
            <% end %>
          </div>
          <div class="col-6 text-right">
            <a href="<%= main_search_path %>"
               class="btn btn-lg btn-outline-secondary">
              <span>
                <i class="fa fa-search">
                </i>
              </span>
              <span>
                <%= t('layouts.application.search') %>
              </span>
            </a>
          </div>
        </div>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
